<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextNev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Koncert neve"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextHelyszin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Helyszín"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextDatum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dátum (pl. 2025-05-18)"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextJegyAra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jegy ára (Ft)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextElerhetoJegyek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Elérhető jegyek száma"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextLeiras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Leírás"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editTextKepUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kép URL (opcionális)"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/editTextLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Szélesség (latitude, pl. 47.4979)"
            android:inputType="numberDecimal|numberSigned" />

        <EditText
            android:id="@+id/editTextLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hosszúság (longitude, pl. 19.0402)"
            android:inputType="numberDecimal|numberSigned" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentés"
            android:layout_gravity="end"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>